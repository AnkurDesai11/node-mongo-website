<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
        integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="/static/css/styles.css">
    <title>Home</title>
</head>

<body>
    {{>navbar data=details}}
    {{>slider slides=slides}}

    <!-- Projects section-->
    <section id="projects_section" class="py-3">
        <div class="container">
            <h2 class="text-center mt-4"><i class="fas fa-light fa-code text-secondary"></i>&nbsp Projects</h2>
            <div class="row mt-5">
                {{#each projects}}
                <div class="col-md-4">
                    <div class="card mt-4">
                        <div class="card-body">
                            <div class="container text-center py-3">
                                <i class="{{this.icon}} card-icon text-secondary"></i>
                            </div>
                            <h4>{{this.title}}</h4>
                            <p>{{this.description}}</p>
                            <a href="{{this.exploreLink}}">Explore</a>
                            <a href="{{this.infoLink}}" class="ml-5">Info</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>

    <!--Projects section ends here-->

    <!-- Contact us section-->

    <section id="contact_us_section" class="py-5 custom-background ">
        <div class="container">
            <h2 class="text-center mt-4 mb-4"><i class="fas fa-light fa-code text-secondary"></i>&nbsp Contact Us</h2>
            <div class="row">
                <div class="class-md-12">
                    <form class="row g-3">
                        <div class="col-md-6">
                            <label for="inputEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="inputEmail4">
                        </div>
                        <div class="col-md-6">
                            <label for="inputTel" class="form-label">Contact Number</label>
                            <input type="tel" class="form-control" id="inputPassword4"
                                placeholder="Please include country code if any">
                        </div>
                        <div id="emailHelp" class="form-text col-md-12">We'll never share your details with anyone else.
                        </div>
                        <div class="form-floating col-12">
                            <textarea style="height: 150px;" class="form-control" placeholder="Leave a comment here"
                                id="floatingTextarea"></textarea>
                            <label for="floatingTextarea">Comments</label>
                        </div>
                        <div class="col-12 text-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact us section ends here-->


    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
