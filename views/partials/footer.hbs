<div class="bg-dark border-top border-info border-3 text-light">
    <div class="container">
        <div class="row p-2 mt-4">
            <div class="col-md-4">
                <h4>{{footer.brandName}}</h4>
                <p>{{footer.brandText}}</p>
                <p><i class="{{footer.brandIconUrl}}"></i>&nbsp; {{footer.brandIconText}}</p>
            </div>
            <div class="col-md-4">
                <div class="row">
                    {{#each footer.siteLinks}}
                    <div class="col-md-6">
                        <a style="color: inherit; text-decoration: none;" href="{{this.url}}">{{this.label}}</a>
                    </div>
                    {{/each}}
                </div>
            </div>
            <div class="col-md-4 text-center">
                {{#each footer.socialLinks}}
                <a href="{{this.url}}" class="social-icon"><i class="{{this.icon}}"></i></a>
                {{/each}}
            </div>
        </div>
    </div>
</div>